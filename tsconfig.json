{
    "compilerOptions": {
      "target": "es2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "typeRoots": ["node_modules/@types"],
      "paths": {
        "~/*": [
          "./src/*"
        ]
      },
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }